{
  "manifest_version": 3,
  "name": "网抑云热门评论君",
  "version": "1.0",
  "description": "在页面中心显示热门网抑云评论",
  "permissions": ["activeTab", "scripting"],
  "host_permissions": [
    "https://api.uomg.com/*"
  ],
  "action": {},
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "web_accessible_resources": [{
    "resources": ["api.json"],
    "matches": ["<all_urls>"]
  }]
}
